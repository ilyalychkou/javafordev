<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
                     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:schemaLocation="http://jakarta.apache.org/log4j/ ">
    <appender name="TxtAppender" class="org.apache.log4j.FileAppender">
        <param name="Encoding" value="UTF-8"/>
        <param name="File" value="/Users/Admin/Documents/javafordev/src/com/javafordev/lesson9/task1/log/log.txt"/>
        <layout class="org.apache.log4j.PatternLayout" >
            <param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss} [%t] %-5p %c - %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter"> <param name="LevelMax" value="WARN"/>
            <param name="LevelMin" value="INFO"/>
        </filter>
    </appender>
    <logger name="beer-logger">
        <level value="info"/>
    </logger>
    <root>
        <appender-ref ref="TxtAppender"/>
    </root>
</log4j:configuration>